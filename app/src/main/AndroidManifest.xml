<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.d500px.fivehundredpx">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:name="com.d500px.fivehundredpx.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.d500px.fivehundredpx.views.grid_screen.PhotoGridActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.d500px.fivehundredpx.views.full_screen.FullPhotoScreenActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.Transparent"/>
    </application>

</manifest>
